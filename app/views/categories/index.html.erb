<div class="container">
  <h1 align="center">Listing all categories</h1>

  <div align="center">
    <%= will_paginate %>
    <% @categories.each do |category| %>
        <ul class="listing">
          <li class="row">
            <div class="well col-md-4 col-md-offset-4">
              <div class="article-title">
                <%= link_to category.name, category_path(category) %>
              </div>
            </div>
          </li>
        </ul>
    <% end %>
    <%= will_paginate %>
  </div>
</div>